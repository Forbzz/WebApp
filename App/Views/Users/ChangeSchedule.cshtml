                        <input type="checkbox" name="selectedDay" value="@DayOfWeek.Sunday" />Воскресенье
                        </div>*@
                    @*<label asp-for="@Model.DayOfWeek"></label>
                    <select asp-for="@Model.DayOfWeek">
